---
import "@fontsource/inter-tight/latin.css";
import "@fontsource/cormorant/latin.css";

import MainBody from "./MainBody.astro";
import MainHead from "./MainHead.astro";

const defaults = {
  title: "Zero Trust Network Access: A Visual Explainer",
  description:
    "A visual guide to Cloudflare's Zero Trust Network Access system and architecture.",
  url: "https://ztna-ag3.pages.dev/",
  image: "/opengraph-image.png",
  twitterCard: "summary_large_image",
  twitterSite: "@momito",
  twitterCreator: "@momito",
  twitterTitle: "Zero Trust Network Access: A Visual Explainer",
  twitterDescription: "A visual guide to Zero Trust Network Access",
  keywords:
    "Cloudflare, Zero Trust, ZTNA, Network Access, Visual Guide, Security",
};

const {
  title,
  description,
  url,
  image,
  twitterCard,
  twitterSite,
  twitterCreator,
  twitterTitle,
  twitterDescription,
  keywords,
  hasContent = true,
} = { ...defaults, ...Astro.props };
---

<!doctype html>
<html lang="en">
  <MainHead
    title={title}
    description={description}
    url={url}
    image={image}
    twitterCard={twitterCard}
    twitterSite={twitterSite}
    twitterCreator={twitterCreator}
    twitterTitle={twitterTitle}
    twitterDescription={twitterDescription}
    keywords={keywords}
  />
  <MainBody hasContent={hasContent}>
    <slot />
  </MainBody>
</html>
