---
import "@fontsource/dm-mono";
import "@fontsource/inter-tight";
import "@fontsource/cormorant";

import MainBody from "./MainBody.astro";
import MainHead from "./MainHead.astro";

const {
  title,
  description,
  url,
  twitterCard,
  twitterSite,
  twitterCreator,
  twitterTitle,
  twitterDescription,
  twitterImage,
  keywords,
  image,
} = Astro.props || {
  title: "Zero Trust Network Access: A Visual Explainer",
  description: "A visual guide to Cloudflare's Zero Trust Network Access system and architecture.",
  url: "https://cloudflare-primitives.app",
  twitterCard: "summary_large_image",
  twitterSite: "@momito",
  twitterCreator: "@momito",
  twitterTitle: "Zero Trust Network Access: A Visual Explainer",
  twitterDescription: "A visual guide to Zero Trust Network Access",
  keywords: "Cloudflare, Zero Trust, ZTNA, Network Access, Visual Guide, Security",
  image: "/cloudflare-primitives/og-image.jpeg",
};
---

<!doctype html>
<html lang="en">
  <MainHead
    title={title}
    description={description}
    url={url}
    twitterCard={twitterCard}
    twitterSite={twitterSite}
    twitterCreator={twitterCreator}
    twitterTitle={twitterTitle}
    twitterDescription={twitterDescription}
    twitterImage={twitterImage}
    keywords={keywords}
    image={image}
  />
  <MainBody>
    <slot />
  </MainBody>
</html>
