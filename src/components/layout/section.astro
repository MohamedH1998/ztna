---
import Divider from "./divider.astro";
import Badge from "./badge.astro";
import ContentSwitcher from "./context-switcher.astro";

type Depth = "beginner" | "technical" | "deep";

interface Props {
  id: string;
  title: string;
  badgeTitle: string;
  description: string;
  innerText: Record<Depth, string[]>;
  alignment?: "horizontal" | "vertical";
}
const {
  id,
  title,
  badgeTitle,
  description,
  innerText,
  alignment = "horizontal",
} = Astro.props as Props;
---

<div id={id} class="w-full">
  <Badge title={badgeTitle} size="sm" variant="secondary" />
  <div
    class={`grid grid-cols-1 ${alignment === "horizontal" ? "md:grid-cols-2" : ""} border-t border-neutral-200 dark:border-neutral-800`}
  >
    <div class="md:border-r md:border-neutral-200 dark:border-neutral-800">
      <div class="">
        <h2 class="text-2xl font-semibold px-4 py-4 font-cormorant">{title}</h2>
        <Divider />
        <p class="text-sm text-neutral-600 dark:text-neutral-400 px-4 py-2">
          {description}
        </p>
      </div>

      <Divider />
      <div class={`flex flex-col ${alignment === "horizontal" ? "lg:flex-row" : "flex-col"}`}>
        <div class="space-y-6 text-neutral-700 dark:text-neutral-300 p-4 w-full">
          {innerText && <ContentSwitcher innerText={innerText} />}
        </div>
      </div>
    </div>
    <div class="w-full">
      <slot name="inner-content" />
    </div>
  </div>
</div>
